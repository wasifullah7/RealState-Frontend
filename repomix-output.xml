import axios from "axios";

const API = axios.create({
  baseURL: "http://127.0.0.1:8000", // FastAPI ka base URL
  headers: {
    "Content-Type": "application/json",
  },
});

// ---- Example: Validate Property URL ----
export const validatePropertyUrl = async (url) => {
  try {
    const response = await API.post("/validate-url", { url });
    return response.data;
  } catch (error) {
    console.error("Error validating URL:", error);
    throw error;
  }
};

// ---- Example: Start Matching ----
export const startMatching = async (url) => {
  try {
    const response = await API.post("/start-matching", { url });
    return response.data;
  } catch (error) {
    console.error("Error starting matching process:", error);
    throw error;
  }
};

// ---- Example: Get Rental Platforms ----
export const getPlatforms = async () => {
  try {
    const response = await API.get("/platforms");
    return response.data;
  } catch (error) {
    console.error("Error fetching platforms:", error);
    throw error;
  }
};

export default API;

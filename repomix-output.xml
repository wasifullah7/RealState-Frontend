import React, { useState, useEffect, useMemo, useCallback } from "react";
import { Filter, Star, MapPin, Wifi, Car, Utensils, Waves } from "lucide-react";
import { motion } from "framer-motion";

const platformColors = {
  Airbnb: "bg-red-100 text-red-700",
  Vrbo: "bg-blue-100 text-blue-700",
  "Booking.com": "bg-indigo-100 text-indigo-700",
};

const amenityIcons = {
  wifi: Wifi,
  pool: Waves,
  kitchen: Utensils,
  parking: Car,
};

const cardVariants = {
  hidden: { opacity: 0, y: 20 },
  visible: { opacity: 1, y: 0 },
};

const ResultsDashboard = ({ searchData, onCompare }) => {
  const [loading, setLoading] = useState(true);
  const [results, setResults] = useState([]);
  const [sortBy, setSortBy] = useState("similarity");
  const [filterPlatform, setFilterPlatform] = useState("all");

  useEffect(() => {
    let isMounted = true;

    const loadResults = async () => {
      setLoading(true);
      await new Promise((resolve) => setTimeout(resolve, 1500)); // Slightly reduced delay

      if (!isMounted) return;

      const mockResults = [
        {
          id: 1,
          title: "Luxury Tuscan Villa with Pool",
          platform: "Airbnb",
          similarity: 94,
          price: "$580/night",
          rating: 4.9,
          location: "Tuscany, Italy",
          amenities: ["wifi", "pool", "kitchen", "parking"],
          image:
            "https://images.pexels.com/photos/1129413/pexels-photo-1129413.jpeg?auto=compress&cs=tinysrgb&w=600",
          url: "https://airbnb.com/rooms/12345",
        },
        {
          id: 2,
          title: "Historic Villa with Vineyard Views",
          platform: "Vrbo",
          similarity: 91,
          price: "$420/night",
          rating: 4.8,
          location: "Chianti, Italy",
          amenities: ["wifi", "kitchen", "garden"],
          image:
            "https://images.pexels.com/photos/1438832/pexels-photo-1438832.jpeg?auto=compress&cs=tinysrgb&w=600",
          url: "https://vrbo.com/property/67890",
        },
      ];

      // Batch state update
      setResults(mockResults);
      setLoading(false);
    };

    loadResults();

    return () => {
      isMounted = false;
    };
  }, [searchData]);

  const filteredResults = useMemo(() => {
    return results
      .filter(
        (result) => filterPlatform === "all" || result.platform === filterPlatform
      )
      .sort((a, b) => {
        if (sortBy === "similarity") return b.similarity - a.similarity;
        if (sortBy === "price")
          return (
            parseFloat(a.price.replace(/[^0-9.]/g, "")) -
            parseFloat(b.price.replace(/[^0-9.]/g, ""))
          );
        if (sortBy === "rating") return b.rating - a.rating;
        return 0;
      });
  }, [results, sortBy, filterPlatform]);

  const handleCompare = useCallback(
    (result) => {
      onCompare(result);
    },
    [onCompare]
  );

  if (loading) {
    return (
      <div className="min-h-screen pt-24 flex items-center justify-center">
        <motion.div
          className="text-center"
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
        >
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
          <h2 className="text-2xl font-bold text-gray-900">
            AI Matching in Progress...
          </h2>
          <p className="text-gray-600">
            Analyzing property data and finding similar rentals...
          </p>
        </motion.div>
      </div>
    );
  }

  return (
    <div className="min-h-screen pt-24 pb-12">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {/* Header */}
        <motion.div
          className="bg-white rounded-2xl p-6 shadow-lg mb-6"
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
        >
          <h1 className="text-2xl font-bold mb-2">
            Found {results.length} Similar Rental Properties
          </h1>
          <p className="text-gray-600">
            Searched URL:{" "}
            <span className="text-blue-600 font-medium">{searchData.url}</span>
          </p>
        </motion.div>

        {/* Filters */}
        <div className="bg-white rounded-xl p-4 shadow mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div className="flex items-center gap-2">
            <Filter className="w-4 h-4 text-gray-500" />
            <select
              value={filterPlatform}
              onChange={(e) => setFilterPlatform(e.target.value)}
              className="border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
            >
              <option value="all">All Platforms</option>
              <option value="Airbnb">Airbnb</option>
              <option value="Vrbo">Vrbo</option>
              <option value="Booking.com">Booking.com</option>
            </select>
          </div>

          <select
            value={sortBy}
            onChange={(e) => setSortBy(e.target.value)}
            className="border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
          >
            <option value="similarity">Sort by Similarity</option>
            <option value="price">Sort by Price</option>
            <option value="rating">Sort by Rating</option>
          </select>
        </div>

        {/* Results Grid */}
        <motion.div
          className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6"
          initial="hidden"
          animate="visible"
          variants={{ visible: { transition: { staggerChildren: 0.1 } } }}
        >
          {filteredResults.map((result) => (
            <motion.div
              key={result.id}
              className="bg-white rounded-2xl shadow hover:shadow-xl transform hover:scale-[1.02] transition-all duration-300 overflow-hidden"
              variants={cardVariants}
            >
              <img
                src={result.image}
                alt={result.title}
                loading="lazy"
                className="w-full h-48 object-cover"
              />
              <div className="p-4">
                <span
                  className={`inline-block px-3 py-1 text-xs rounded-full mb-2 ${
                    platformColors[result.platform] ||
                    "bg-gray-100 text-gray-700"
                  }`}
                >
                  {result.platform}
                </span>
                <h3 className="text-lg font-semibold">{result.title}</h3>
                <p className="text-sm text-gray-500 flex items-center gap-1">
                  <MapPin className="w-4 h-4" /> {result.location}
                </p>

                <div className="flex items-center gap-3 text-sm mt-2">
                  <span className="font-semibold">{result.price}</span>
                  <span className="flex items-center gap-1 text-yellow-500">
                    <Star className="w-4 h-4" /> {result.rating}
                  </span>
                </div>

                {/* Amenities */}
                <div className="flex flex-wrap gap-2 mt-3">
                  {result.amenities.slice(0, 3).map((amenity, i) => {
                    const Icon = amenityIcons[amenity] || Star;
                    return (
                      <span
                        key={i}
                        className="flex items-center gap-1 text-xs bg-gray-100 px-2 py-1 rounded-full"
                      >
                        <Icon className="w-3 h-3" /> {amenity}
                      </span>
                    );
                  })}
                </div>

                <motion.button
                  whileTap={{ scale: 0.95 }}
                  whileHover={{ scale: 1.05 }}
                  onClick={() => handleCompare(result)}
                  className="mt-4 w-full bg-gradient-to-r from-blue-600 to-teal-600 text-white py-2 rounded-lg shadow hover:shadow-lg transition"
                >
                  Compare
                </motion.button>
              </div>
            </motion.div>
          ))}
        </motion.div>
      </div>
    </div>
  );
};

export default ResultsDashboard;
</file>

